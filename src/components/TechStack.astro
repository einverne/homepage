---
import { Icon } from 'astro-icon/components';
import { getLocale, getTranslations } from '@/utils/i18n';

const locale = getLocale(Astro.currentLocale);
const t = getTranslations(locale);

type IconEntry = string | { light: string; dark: string } | { src: string };

const skillIcon = (name: string) => `skill-icons:${name}`;
const skillIconVariants = (name: string): IconEntry => ({
  light: `skill-icons:${name}-light`,
  dark: `skill-icons:${name}-dark`,
});
const simpleIcon = (name: string) => `simple-icons:${name}`;

// Map tech names to local Iconify identifiers or custom assets
const techIconMap: Record<string, IconEntry> = {
  // Frontend
  'React': skillIconVariants('react'),
  'Next.js': skillIconVariants('nextjs'),
  'Flutter': skillIconVariants('flutter'),
  'Astro': skillIcon('astro'),
  'Gatsby': skillIcon('gatsby'),
  'Bootstrap': skillIcon('bootstrap'),
  'HTML': skillIcon('html'),

  // Backend
  'Python': skillIconVariants('python'),
  'Flask': skillIconVariants('flask'),
  'FastAPI': skillIcon('fastapi'),
  'Hono': simpleIcon('hono'),
  'Node.js': skillIconVariants('nodejs'),
  'Java': skillIconVariants('java'),
  'Kotlin': skillIconVariants('kotlin'),
  'Spring': skillIconVariants('spring'),
  'Laravel': skillIconVariants('laravel'),
  'Dart': skillIconVariants('dart'),

  // Database
  'PostgreSQL': skillIconVariants('postgresql'),
  'MySQL': skillIconVariants('mysql'),
  'SQLite': skillIcon('sqlite'),
  'Redis': skillIconVariants('redis'),
  'Prisma': skillIcon('prisma'),

  // Cloud & Infrastructure
  'Cloudflare': skillIconVariants('cloudflare'),
  'Azure': skillIconVariants('azure'),
  'Netlify': skillIconVariants('netlify'),
  'Vercel': skillIconVariants('vercel'),
  'Kubernetes': skillIcon('kubernetes'),
  'K3s': skillIcon('kubernetes'),
  'Docker': skillIcon('docker'),
  'Nginx': skillIcon('nginx'),
  'Appwrite': skillIcon('appwrite'),
  'Rancher': { src: '/icons/rancher.svg' },

  // DevOps & Tools
  'Git': skillIcon('git'),
  'GitHub': skillIconVariants('github'),
  'GitLab': skillIconVariants('gitlab'),
  'Ansible': skillIcon('ansible'),
  'Terraform': skillIconVariants('terraform'),
  'Bash': skillIconVariants('bash'),
  'Linux': skillIconVariants('linux'),
  'Ubuntu': skillIconVariants('ubuntu'),
  'Maven': skillIconVariants('maven'),
  'Yarn': skillIconVariants('yarn'),
  'Bun': skillIconVariants('bun'),
  'Grafana': skillIconVariants('grafana'),
  'Sentry': skillIcon('sentry'),

  // Editors & IDEs
  'Vim': skillIconVariants('vim'),
  'Obsidian': skillIconVariants('obsidian'),
  'IntelliJ IDEA': skillIconVariants('idea'),

  // Social & Other
  'Mastodon': skillIconVariants('mastodon'),
  'WordPress': skillIcon('wordpress'),
  'Markdown': skillIconVariants('markdown'),
};

const techCategories = [
  {
    name: t.techStack.frontend,
    techs: ['React', 'Next.js', 'Astro', 'Flutter', 'Gatsby', 'Bootstrap', 'HTML'],
  },
  {
    name: t.techStack.backend,
    techs: ['Python', 'Flask', 'FastAPI', 'Java', 'Kotlin', 'Spring', 'Node.js', 'Laravel'],
  },
  {
    name: t.techStack.database,
    techs: ['PostgreSQL', 'MySQL', 'Redis', 'SQLite', 'Prisma'],
  },
  {
    name: t.techStack.cloud,
    techs: ['Cloudflare', 'Azure', 'Netlify', 'Vercel', 'Kubernetes', 'Rancher', 'Docker', 'Nginx'],
  },
  {
    name: t.techStack.devops,
    techs: ['Git', 'GitHub', 'GitLab', 'Ansible', 'Terraform', 'Bash', 'Linux', 'Maven', 'Grafana', 'Sentry'],
  },
  {
    name: t.techStack.editors,
    techs: ['Vim', 'Obsidian', 'IntelliJ IDEA'],
  },
];

const getTechIconEntry = (tech: string): IconEntry => {
  if (techIconMap[tech]) {
    return techIconMap[tech];
  }
  const normalized = tech.toLowerCase().replace(/[^a-z0-9]+/g, '');
  return skillIcon(normalized);
};
---

<section class="tech-stack">
  <div class="header">
    <h2>{t.techStack.title}</h2>
  </div>

  <div class="tech-categories">
    {techCategories.map((category) => (
      <div class="category">
        <h3 class="category-name">{category.name}</h3>
        <div class="tech-tags">
          {category.techs.map((tech) => {
            const iconEntry = getTechIconEntry(tech);
            return (
              <div class="tech-tag">
                {typeof iconEntry === 'string' ? (
                  <Icon name={iconEntry} class="tech-icon icon-single" aria-label={tech} />
                ) : 'src' in iconEntry ? (
                  <img
                    src={iconEntry.src}
                    alt={tech}
                    class="tech-icon icon-single"
                    loading="lazy"
                  />
                ) : (
                  <>
                    <Icon name={iconEntry.light} class="tech-icon icon-light" aria-label={tech} />
                    <Icon name={iconEntry.dark} class="tech-icon icon-dark" aria-label={tech} />
                  </>
                )}
                <span class="tech-name">{tech}</span>
              </div>
            );
          })}
        </div>
      </div>
    ))}
  </div>

</section>

<style>
.tech-stack {
  background: var(--color-content-bg);
  border: 1px solid color-mix(in srgb, var(--border-color) 45%, transparent);
  border-radius: 16px;
  padding: 20px;
  box-shadow: 0 8px 24px var(--color-shadow);
  width: 100%;
  box-sizing: border-box;
}

.header {
  margin-bottom: 16px;
}

.header h2 {
  font-size: 1.3rem;
  margin: 0;
  background: linear-gradient(135deg, var(--link-color), color-mix(in srgb, var(--link-color) 70%, #9333ea));
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.tech-categories {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  gap: 16px;
}

.category {
  border-radius: 8px;
}

.category-name {
  font-size: 0.8rem;
  font-weight: 600;
  margin: 0 0 8px 0;
  color: var(--motto-text-color);
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.tech-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 6px;
}

.tech-tag {
  display: inline-flex;
  align-items: center;
  gap: 6px;
  padding: 5px 10px;
  font-size: 0.8rem;
  background: color-mix(in srgb, var(--border-color) 8%, transparent);
  color: var(--text-color);
  border-radius: 6px;
  font-weight: 500;
  border: 1px solid color-mix(in srgb, var(--border-color) 25%, transparent);
  transition: all 0.2s ease;
  cursor: default;
}

.tech-tag:hover {
  background: color-mix(in srgb, var(--link-color) 10%, transparent);
  border-color: color-mix(in srgb, var(--link-color) 35%, transparent);
  transform: translateY(-2px);
  box-shadow: 0 4px 12px color-mix(in srgb, var(--link-color) 10%, transparent);
}

.tech-icon {
  width: 18px;
  height: 18px;
  object-fit: contain;
  flex-shrink: 0;
  display: inline-block;
  color: var(--text-color);
}

.tech-icon.icon-dark {
  display: none;
}

html[data-theme="dark"] .tech-icon.icon-light {
  display: none;
}

html[data-theme="dark"] .tech-icon.icon-dark {
  display: inline-block;
}

.tech-name {
  white-space: nowrap;
}

@media (max-width: 768px) {
  .tech-stack {
    padding: 18px;
  }

  .tech-categories {
    grid-template-columns: 1fr;
    gap: 12px;
  }

  .tech-tags {
    gap: 5px;
  }

  .tech-tag {
    padding: 4px 8px;
    font-size: 0.75rem;
  }

  .tech-icon {
    width: 16px;
    height: 16px;
  }
}
</style>
